
<% if @contestants.size == 0%>
<div style="border:1px solid #339900;background-color:#DDFFDD;padding:10px">
	Click 'Create New Sprite' to create a profile for your kid
</div>
<% end%>
<input type="button" value="Create New Sprite" onclick="window.location='<%=url_for :action=>'new' %>'" />
<p/>


<% for contestant in @contestants %>
	<div class="gender<%=contestant.gender%>">
	<table>
		<tr>
			<td >
				<a href="<%= url_for :action=>'show', :id=>contestant.id %>" class="editorkit">
		<%=image_tag( contestant.photo.url( :small)) %> 
		
		</a>
		</td>
		<td valign="middle">
			<a href="<%= url_for :action=>'show', :id=>contestant.id %>" class="editorkit">
			<span style="font-weight:bold;"><%=contestant.name%></span>
			</a>
		</td>

		</tr>
	</table>
	</div>
	<br/>
<% end %>