<h1>New challenge</h1>

<% form_for(@challenge) do |f| %>
  <%= f.error_messages %>

	<%# The form elements for challenge.contest %>
	<% for contest in @challenge.contests %>
		<% fields_for "...", contest do |contest_form|  %>
		Name: <%= contest_form.text_field :name %>
		<% end %>
	<% end %>

  <p>
    <%= f.label :expire_date %><br />
    <%= f.datetime_select :expire_date %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', challenges_path %>
