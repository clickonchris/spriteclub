<h1>Editing challenge</h1>

<% form_for(@challenge) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sent_to_user %><br />
    <%= f.text_field :sent_to_user %>
  </p>
  <p>
    <%= f.label :expire_date %><br />
    <%= f.datetime_select :expire_date %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @challenge %> |
<%= link_to 'Back', challenges_path %>
